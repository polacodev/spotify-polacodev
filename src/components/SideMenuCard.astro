---
import type { Playlist } from "@/lib/data";
import { Image } from 'astro:assets';

interface Props {
	playlist: Playlist;
}

const { playlist } = Astro.props;
const { albumId, artists, color, cover, id, title } = playlist;

const artistString = artists.join(", ");
---

<a
	href={`/playlist/${id}`}
	class="playlist-item flex relative p-2 overflow-hidden items-center gap-2 rounded-md hover:bg-zinc-800/50"
>
	<picture class="size-12 flex-none">
		<Image
			src={cover}
			alt={`Cover by ${title} and ${artistString}`}
			width="100"
			height="100"
			loading="eager"
			class="object-cover size-full rounded-md"
		/>
	</picture>
	<div class="flex flex-auto flex-col truncate">
		<h4 class="text-zinc-100 text-sm truncate">{title}</h4>
		<span class="text-zinc-400 text-xs truncate">{artistString}</span>
	</div>
</a>
