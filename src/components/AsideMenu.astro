---
import SideMenuItem from "@/components/SideMenu.astro";
import SideMenuCard from "@/components/SideMenuCard.astro";

import LibraryIcon from "@/icons/Library.astro";
import HomeIcon from "@/icons/Home.astro";
import SearchIcon from "@/icons/Search.astro";
import SpotifyIcon from "@/icons/Spotify.astro";

import { playlists } from "@/lib/data";
---

<nav class="flex flex-col flex-1 gap-2">
	<div class="bg-zinc-900 rounded-lg p-2">
		<ul>
			<SideMenuItem href="https://open.spotify.com/" target="_blank">
				<SpotifyIcon />
			</SideMenuItem>
			<SideMenuItem href="/">
				<HomeIcon />
				Home
			</SideMenuItem>
			<SideMenuItem href="/#">
				<SearchIcon />
				Search
			</SideMenuItem>
		</ul>
	</div>

	<div class="bg-zinc-900 rounded-lg p-2 flex-1">
		<ul>
			<SideMenuItem href="/">
				<LibraryIcon />
				Your Library
			</SideMenuItem>
			{playlists.map((playlist) => <SideMenuCard playlist={playlist} />)}
		</ul>
	</div>
</nav>
